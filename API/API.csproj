    <PackageReference Include="System.IO.Abstractions" Version="17.2.3" />
    <PackageReference Include="VersOne.Epub" Version="3.3.0-alpha1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Kavita.Common\Kavita.Common.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="config\appsettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Condition=" '$(Configuration)' != 'Release'"  Update="config\appsettings.Development.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>
